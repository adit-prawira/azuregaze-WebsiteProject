<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title></title>
        <meta name="description" content="" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="../css/musicDetails.css" />
        <link rel="stylesheet" href="../css/appMusicPlayer.css" />
        <%- include('style') %>
    </head>
    <body id="cold-morning">
        <%- include('navbar') %>
        <div class="container">
            <div class="row">
                <div class="col">
                    <img src="Images/cold-morning.png" alt="..." />
                </div>

                <div class="col">
                    <h2>Cold Morning</h2>
                    <div class="container-audio mb-3">
                        <label
                            >1. walking through the cold morning breeze</label
                        >
                        <div id="graph-cold-morning" class="container-audio">
                            <%- include('bar-animation') %>
                        </div>
                        <audio controls controlsList="nodownload">
                            <source
                                src="Audio/walking through the cool morning breeze.mp3"
                                type="audio/ogg"
                            />
                        </audio>
                    </div>
                    <div class="container-audio">
                        <label>2. meet her at the station</label>
                        <div id="graph-cold-morning" class="container-audio">
                            <%- include('bar-animation') %>
                        </div>
                        <audio controls controlsList="nodownload">
                            <source
                                src="Audio/met her at the station.mp3"
                                type="audio/ogg"
                            />
                        </audio>
                    </div>
                </div>
                <div class="row">
                    <h3 class="mt-3">Comments/Reviews</h3>
                    <form
                        class="mb-3 validated-form"
                        action="/<%= albumDat.name %>/reviews"
                        method="POST"
                        novalidate
                    >
                        <div class="mb-3">
                            <label
                                id="review-label"
                                class="form-label"
                                for="author"
                                >Author (optional):</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                name="review[author]"
                                id="author"
                            />
                        </div>
                        <div class="mb-3">
                            <label
                                id="review-label"
                                class="form-label"
                                for="body"
                                >Comments/Reviews:</label
                            >
                            <textarea
                                class="form-control"
                                name="review[body]"
                                id=""
                                cols="30"
                                rows="3"
                                required
                            ></textarea>
                        </div>
                        <button class="btn btn-success">Submit</button>
                    </form>
                    <% for(let review of albumDat.reviews) {%>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <b><%= review.author %></b>
                                </h5>
                                <p class="card-text"><%= review.body %></p>
                            </div>
                        </div>
                        <% } %>
                    </div>
                    <a class="btn btn-success mt-5">Back to Main Page</a>
                </div>
                
            </div>
        </div>
        <%- include('footer') %>
    </body>
</html>
