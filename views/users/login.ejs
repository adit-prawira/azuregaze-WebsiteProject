<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>Login</title>
        <meta name="description" content="" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <%- include('../partials/style') %>
    </head>
    <body id="login-body">
        <%- include('../partials/navbar') %>
        <main class="container mt-5">
            <div id="register-login-container" class="container">
                <h2>Login</h2>
                <form
                    action="/login"
                    method="POST"
                    class="validated-form"
                    novalidate
                >
                    <!-- Username registration form  -->
                    <div class="mb-3">
                        <label class="form-label" for="username"
                            >Username:</label
                        >
                        <input
                            class="form-control"
                            type="text"
                            id="username"
                            name="username"
                            required
                        />
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <!-- Password registration form  -->
                    <div class="mb-3">
                        <label class="form-label" for="username"
                            >Password:</label
                        >
                        <input
                            class="form-control"
                            type="password"
                            id="password"
                            name="password"
                            required
                        />
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <button class="btn bg-success btn-block">Login</button>
                </form>
                <a href="/" id="cancel" class="btn btn-block">Cancel</a>
            </div>
        </main>
        <%- include('../partials/footer') %>
    </body>
</html>
