<div class="row">
    <h3 class="mt-3">Comments/Reviews</h3>
    <form
        action="/<%= albumDat.name %>/reviews"
        method="POST"
        class="mb-3 validated-form"
        novalidate
    >
        <div class="mb-3">
            <label id="review-label" class="form-label" for="author"
                >Author (Optional: Leave it blank for anonymous review):</label
            >
            <input
                class="form-control"
                type="text"
                id="author"
                name="review[author]"
            />
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
            <label id="review-label" class="form-label" for="body"
                >Review:</label
            >
            <textarea
                class="form-control"
                type="text"
                id="body"
                name="review[body]"
                required
            ></textarea>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-success">Submit</button>
    </form>

    <% for(let review of albumDat.reviews) {%>
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">
                <b><%= review.author ? review.author : "Anonymous" %></b> said:
            </h5>
            <hr />
            <p class="card-text">"<%= review.body %>"</p>
            <form
                action="/<%= albumDat.name  %>/reviews/<%= review._id %>?_method=DELETE"
                method="POST"
            >
                <button class="btn btn-sm btn-danger">Delete</button>
            </form>
        </div>
    </div>
    <% } %>

    <a class="btn btn-success mt-5" href="/">Back to Main Page</a>
</div>
